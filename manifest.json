{
  "manifest_version": 3,
  "name": "EventSnap",
  "version": "0.1.0",
  "description": "Capture visible tab screenshots and extract event details using OpenAI.",
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "EventSnap"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

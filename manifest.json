{
  "manifest_version": 3,
  "name": "EventSnap",
  "version": "0.2.0",
  "description": "Capture visible tab screenshots, extract event details, and sync to Supabase.",
  "permissions": ["activeTab", "tabs", "storage", "identity"],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://*.supabase.co/*",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "EventSnap"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

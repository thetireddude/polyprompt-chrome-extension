{
  "manifest_version": 3,
  "name": "PolySync",
  "version": "0.1.0",
  "description": "Capture visible tab screenshots and extract event details using OpenAI.",
  "permissions": ["activeTab", "storage", "identity", "tabs"],
  "host_permissions": ["https://api.openai.com/*", "https://*.supabase.co/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "PolySync"
  },
  "icons": {
    "16": "icons/extension-icon-16x16.png",
    "32": "icons/extension-icon-32x32.png",
    "48": "icons/extension-icon-48x48.png",
    "128": "icons/extension-icon-128x128.png"
  }
}
